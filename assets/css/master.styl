normalize()

def = #eee

redblue(start, end)
  -o-linear-gradient(left, start 0%, end 100%)
  -moz-linear-gradient(left, start 0%, end 100%)
  -ms-linear-gradient(left, start 0%, end 100%)
  -webkit-linear-gradient(left, start 0%, end 100%)

body
  .container
    position absolute
    background-image linear-gradient(left, rgba(247, 107, 76, 0.85) 0%, rgba(92, 157, 245, 0.85) 100%)
    background-color linear-gradient(left, rgba(247, 107, 76, 0.85) 0%, rgba(92, 157, 245, 0.85) 100%)
    background linear-gradient(left, rgba(247, 107, 76, 0.85) 0%, rgba(92, 157, 245, 0.85) 100%)
    height 100%
    width 100%

  img
    width 50%
    position absolute
    top 10%
    left 20%
    border 1px solid #333

  .spinner
    position absolute
    top 50%
    left 50%
    margin-left -50px
    margin-top -50px

    p
      margin-top 50px

    #circleBounce
      .circle1, .circle2, .circle3
        position absolute
        top 0
        left 0
        width 50px
        height 50px
        //background-color #1abc9c default color
        background-color #fff
        rounded()
        opacity 0.33
        animation bounce 2.0s infinite ease-in-out

      .circle2
        animation-delay -.33s

      .circle3
        animation-delay -.66s

      @keyframes bounce
        0%, 100% 
          transform scale(0.0)
        50%
          transform scale(1.0)

    #blockBounce
      list-style none
      display inline
      .block1, .block2, .block3, .block4
        display inline-block
        margin-left 2px
        width 5px
        height 30px
        background-color #ff3333
        animation bounce 2.0s infinite ease-in-out

      .block2
        animation-delay -.25s

      .block3
        animation-delay -.5s

      .block4
        animation-delay -.75s

      @keyframes bounce
        0%, 100%
          transform scale(0.0)
        50%
          transform scale(1.0)
